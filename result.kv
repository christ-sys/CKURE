
<Result>:
    name: "result"
    GridLayout:
        cols: 1
        MDTopAppBar:
            title: "Result"
            left_action_items: [["arrow-left", lambda x : root.back(self.icon)]]
            right_action_items: [["plus",lambda x : root.back(self.icon)]]
            elevation: 0
            md_bg_color:"#323B4E"
        
        GridLayout:
            cols: 1
            spacing: 5
            padding: 5
            id:test
            height: self.minimum_height
            
            CustomRecycleView:
                id: rv
                viewclass: 'CustomCard'
                RecycleBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    default_size: None, dp(320)
                    default_size_hint: 1, None
                    spacing: 10
                    padding:8
                    height: self.minimum_height

            AnchorLayout:
                anchor_y: 'bottom'
                padding: 20,0,20,20
                anchor_x: 'center'
                size_hint_y: None
                MDRaisedButton:
                    text: "Generate a Report"
                    mode: "rectangle"
                    text_color: "white"
                    halign: 'center'
                    font_size: '18sp'
                    size_hint_x: 1
                    elevation: 0
                    md_bg_color:"#607398"
                    padding: 10
                    on_release:
                        app.root.current="createReport"

<CustomCard>:
    orientation: 'vertical'
    padding: ("8dp")
    Image:
        source: root.image_source
        allow_stretch: True
        keep_ratio: True
        size_hint_y: 3
        size_hint_x: 1
    ThreeLineListItem:
        text: 'Panel: '+root.part +' ' + root.confidence
        secondary_text: 'Damage: '+root.damage_type
        tertiary_text: 'Service: '+root.service
    MDRectangleFlatIconButton:
        icon: "trash-can"
        text: "Remove"
        icon_theme_color:"Custom"
        icon_color:"red"
        theme_text_color:"Custom"
        text_color: "red"
        line_color: 0, 0, 0, 0
        size_hint_x: 1
        on_press: app.delete(root.image_source)
