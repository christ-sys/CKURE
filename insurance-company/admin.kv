MDScreen:
    name:"admin"
    GridLayout:
        cols: 1
        padding: (0, 80, 0, 0)
        Image:
            source:'../assets/ckure.png'
            keep_ratio: True
            size_hint_y: None
            padding:'80dp'
        GridLayout:
            cols: 1
            MDLabel:
                text: 'ADMIN Login'
                font_name: '../fonts/Oswald-Regular.ttf'
                halign: 'center'
                font_size: 30
        GridLayout:
            cols: 1
            padding: '12dp'
            MDTextField:
                id: email
                hint_text: "Email"
                helper_text: "This field is required"
                helper_text_mode: "on_focus"
            MDTextField:
                id: password
                hint_text: "Password"
                password: True
                helper_text: "This field is required"
                helper_text_mode: "on_focus"
                password_mask:'â€¢'
        MDFloatLayout:
            MDCheckbox:
                size_hint: None,None
                size: '48dp','48dp'
                pos_hint:{"center_x":.05, "center_y": .5}
                on_active: app.show_password(*args)
            MDLabel:
                id: show_password
                text: 'Show Password'
                pos_hint:{"center_x": .6, "center_y": .5}


        GridLayout:
            cols: 1
            padding: '12dp'
            spacing: '5dp'    
            MDRaisedButton:
                text: "Log In"
                mode: "rectangle"
                elevation:0
                md_bg_color: 9/255,65/255,176/255
                size_hint_x: 0.9
                on_press: app.verify_admin()
                