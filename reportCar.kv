<Report>:
    name: "reportCar"
    GridLayout:
        cols: 1
        MDTopAppBar:
            title: "Report Car"
            left_action_items: [["arrow-left", lambda x : root.back(self.icon)]]
            elevation: 0
            md_bg_color:"#323B4E"
        
        GridLayout:
            cols: 1
            spacing: 5
                       
            BoxLayout:
                orientation: 'vertical'
                ScrollView:
                    padding: 10
                    MDList:
                        padding: 30,0,30,30
                        Image:
                            id: imgSrc
                            pos_hint:{"center_x": .5, "center_y": .005}
                            source: 'assets/car.png'
                            keep_ratio: True
                            size_hint_y: None
                            height: dp(150)
                        MDTextField:
                            id:location
                            hint_text: "Location of accident"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        MDTextField:
                            id: date
                            text: root.current_date
                            hint_text: "Date"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        MDTextField:
                            id:time
                            text: root.current_time
                            hint_text: "Time"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        
                        MDTextField:
                            id:company
                            hint_text: "Company"
                            helper_text_mode: "persistent"
                            width: dp(10)
                            on_focus: if self.focus: root.CompanyMenu.open()

                        MDTextField:
                            id:model
                            hint_text: "Model"
                            helper_text_mode: "persistent"
                            width: dp(10)
                            on_focus: root.checkCompany(self, self.focus)
                            # on_focus: if self.focus: root.ModelMenu.open()
                        MDTextField:
                            id:platenum
                            hint_text: "Plate Number"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        
                        MDTextField:
                            id:insurancecomp
                            hint_text: "Insurance Company"
                            helper_text_mode: "persistent"
                            width: dp(10)
                            # on_focus: if self.focus: root.CompanyInsMenu.open()

                        MDTextField:
                            id:policynum
                            hint_text: "Policy Number"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        
                        
                        
                        MDFillRoundFlatButton:
                            text: "Next"
                            text_color: "white"
                            halign: 'center'
                            font_size: '20sp'
                            size_hint_x: 0.9
                            radius: 1,1
                            md_bg_color: "#607398"
                            on_press: 
                                root.manager.current='driverdetails'
                                root.manager.transition.direction='left'
                            on_release: root.report()
                            
                        