<Brand>:
    name: "car_brand"
    # MDTopAppBar:
    #     title: "Car Brands"
    #     elevation: 0
    #     pos_hint: {"top": 1}
    #     md_bg_color:"#0096c7"
    #     left_action_items:[["arrow-left", lambda x : app.back(self.icon)]]
    ScrollView:
        pos_hint: {"center_x": 0.5, "center_y": 0.38}
        size_hint: (1,1)
        GridLayout:
            id: grid
            cols: 1
            height: self.minimum_height
            size_hint_y: None
            MDBoxLayout:
                MDLabel:
                    id: brand_label
                    text: ''
    AnchorLayout:
        padding: '10dp'
        anchor_y: 'bottom'
        anchor_x: "right"
        MDIconButton:
            icon: "plus"
            halign: "right"
            rounded: True
            md_bg_color:"#90e0ef"
            on_press: root.add_brand()
    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
            
    MDTopAppBar:
        title: "Car Brands"
        elevation: 0
        pos_hint: {"top": 1}
        md_bg_color:"#0096c7"
        left_action_items:
            [['menu', lambda x: nav_drawer.set_state("open")]]
        right_action_items: [["car-search"]]
    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        # md_bg_color:"#caf0f8"
        elevation:3
        ContentNavigationDrawer:
            sm: screen_manager
            nav_drawer: nav_drawer
