<Cardetails>:
    name: "cardetails"
    MDTopAppBar:
        title: "Details"
        elevation: 0
        pos_hint: {"top": 1}
        md_bg_color:"#0096c7"
        left_action_items:[["arrow-left", lambda x : root.back(self.icon)]]
    ScrollView:
        pos_hint: {"center_x": 0.5, "center_y": 0.38}
        size_hint: (1,1)
        GridLayout:
            id: grid
            cols: 1
            height: self.minimum_height
            size_hint_y: None
            width: self.minimum_width
            MDLabel:
                text: "Category: "
                size_hint_y: None
                height: '30dp'
        
            MDLabel:
                id: category_label
                size_hint_y: None
                height: '30dp'
            
            MDLabel:
                text: "Make: "
                size_hint_y: None
                height: '30dp'
            
            MDLabel:
                id: make_label
                size_hint_y: None
                height: '30dp'
            
            MDLabel:
                text: "Year: "
                size_hint_y: None
                height: '30dp'
            
            MDLabel:
                id: year_label
                size_hint_y: None
                height: '30dp'
            
            MDLabel:
                text: "Model: "
                size_hint_y: None
                height: '30dp'
            
            MDLabel:
                id: model_label
                size_hint_y: None
                height: '30dp'