<SignUp>:
    name: "signup"
    MDSliverAppbar:
        background_color: "#323B4E"
        radius: [20,20,0,0]
        MDSliverAppbarHeader:
            MDRelativeLayout:
                FitImage:
                    source: "assets/car-bg.png"
                MDCard:
                    md_bg_color:"white"
                    opacity:.8
                FitImage:
                    source: "assets/ckure.png"
                    pos_hint: {"center_x": .45, "center_y": .5}
                    size_hint: None, None
                    size: "300dp", "200dp"
        MDSliverAppbarContent:
            id: content
            md_bg_color:"#323b4e"
            orientation: "vertical"
            padding: "12dp"
            spacing: "12dp"
            adaptive_height: True
            MDBoxLayout:
                md_bg_color:"#323b4e"
                orientation: "vertical"
                adaptive_height: True
                spacing: "6dp"
                padding: "12dp"
                pos_hint: {"center_y": .6}

                MDLabel:
                    size_hint_y: None
                    halign: 'center'
                    text: "Registration"
                    theme_text_color:"Custom"
                    text_color: "white"
                    font_size: "22sp"
                    font_name: "fonts/Montserrat-Thin.ttf"
                    font_name: "fonts/coolvetica.otf"

                MDTextField:
                    id: name
                    hint_text: "Name*"
                    icon_left:"account"
                    required: True
                    error_color: (111/255,168/255,220/255)
                    pos_hint:{"center_x": .5}
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                MDTextField:
                    id: license
                    hint_text: "Driver's License*"
                    required: True
                    icon_left:"license"
                    error_color: (111/255,168/255,220/255)
                    pos_hint:{"center_x": .5}
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                MDTextField:
                    id: business
                    hint_text: "Business or Profession"
                    pos_hint:{"center_x": .5}
                    icon_left: "account"
                    hint_text_color_normal:(111/255,168/255,220/255)
                    hint_text_color_focus:"white"
                    line_color_normal: (111/255,168/255,220/255)
                    line_color_focus: (111/255,168/255,220/255)
                    text_color_normal:(111/255,168/255,220/255)
                    helper_text_color_focus: (111/255,168/255,220/255)
                MDTextField:
                    id: email
                    hint_text: "Email*"
                    icon_left:"email"
                    required: True
                    error_color: (111/255,168/255,220/255)
                    pos_hint:{"center_x": .5}
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                MDTextField:
                    id: address
                    hint_text: "Address*"
                    icon_left:"home"
                    required: True
                    error_color: (111/255,168/255,220/255)
                    pos_hint:{"center_x": .5}
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"

                MDTextField:
                    id: contact
                    hint_text: "Contact No.*"
                    icon_left:"phone"
                    required: True
                    error_color: (111/255,168/255,220/255)
                    pos_hint:{"center_x": .5}
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                MDTextField:
                # dapat calendar tapos matic na yung sa age
                    id: dob
                    hint_text: "Date of Birth*"
                    icon_left:"calendar"
                    required: True
                    error_color: (111/255,168/255,220/255)
                    pos_hint:{"center_x": .5}
                    on_focus: if self.focus: root.showCalendar()
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                MDTextField:
                # magbbase sa DOB
                    id: age
                    hint_text: "Age*"
                    required: True
                    icon_left:"account"
                    error_color: (111/255,168/255,220/255)
                    pos_hint:{"center_x": .5}
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                MDTextField:
                # dapat dropdown ito
                    id: gender
                    required: True
                    icon_left:"gender-male-female"
                    error_color: (111/255,168/255,220/255)
                    hint_text: "Gender*"
                    pos_hint:{"center_x": .5}
                    on_focus: if self.focus: root.GenderMenu.open()
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                MDTextField:
                    id: password
                    hint_text: "Password*"
                    icon_left:"key-variant"
                    required: True
                    password: True
                    error_color: (111/255,168/255,220/255)
                    pos_hint:{"center_x": .5}
                    helper_text_mode: "on_error"
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                    helper_text: "Minimum 8 characters w/ special, uppercase, and number"
                    on_text: root.validate_password()
                MDRaisedButton:
                    text: "Register"
                    pos_hint:{"center_x": .5}
                    mode: "rectangle"
                    md_bg_color: "#0096c7"
                    size_hint_x:1
                    elevation: 0
                    on_press: root.reg_user()