<Dashboard>:
    name:'dashboard'
    ScrollView:
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        GridLayout:
            id: grid
            spacing: '10dp'
            padding: '20dp'
            cols: 2
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            height:self.minimum_height
            size_hint_y: None
            width: self.minimum_width
            CustomCard:
                MDBoxLayout:
                    orientation: 'vertical'
                    MDIcon:
                        font_size: '80dp'
                        icon: "file"
                        pos_hint: {"center_x": .47, "center_y": .5}
                        badge_icon: "numeric-"+root.count_claims()
                        badge_bg_color: "#0096c7"
                    MDLabel:
                        font_size: '18dp'
                        bold: True
                        text: "Total Claims"
                        halign: 'center'
            CustomCard:
                MDIcon:
                    font_size: '80dp'
                    icon: "account"
                    pos_hint: {"center_x": .47, "center_y": .5}
                    badge_icon: "numeric-"+root.count_users()
                    badge_bg_color: "#0096c7"
                MDLabel:
                    font_size:'18dp'
                    bold: True
                    text: "Registered Accounts" 
                    halign: 'center'
    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
            
    MDTopAppBar:
        elevation: 0
        pos_hint: {"top": 1}
        md_bg_color:"#0096c7"
        left_action_items:
            [['menu', lambda x: nav_drawer.set_state("open")]]
        right_action_items: [["account", lambda x: x]]
    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        # md_bg_color:"#caf0f8"
        elevation:3
        ContentNavigationDrawer:
            sm: screen_manager
            nav_drawer: nav_drawer
            

<ContentNavigationDrawer>:
    # name: 'content_nav_drawer'
    # name_label: name
    # email_label: email
    BoxLayout:
        orientation: "vertical"
        # AnchorLayout:
        #     anchor_x: "center"
        #     size_hint_y: None
        #     height: avatar.height
        #     Image:
        #         id: avatar
        #         size_hint: None, None
        #         size: "120dp", "120dp"
        #         source: "../assets/cat.png"
        # TwoLineRightIconListItem:
        #     id: name
        #     text: ""
        #     secondary_text: ""
        MDCard:
            MDLabel:
                text: 'ABC - INSURANCE'
        ScrollView:
            size_hint: (1, 1)
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                OneLineIconListItem:
                    text: "Dashboard"
                    on_press:
                        root.nav_drawer.set_state("close")
                        app.root.current="dashboard"
                    IconLeftWidget:
                        icon:"view-dashboard"
                OneLineIconListItem:
                    text: "Insurance Claims"
                    on_press:
                        root.nav_drawer.set_state("close")
                        app.root.current="claims"
                    IconLeftWidget:
                        icon:"file"
                OneLineIconListItem:
                    text: "Accounts"
                    on_press:
                        root.nav_drawer.set_state("close")
                        app.root.current="accounts"
                    IconLeftWidget:
                        icon:"account"
                OneLineIconListItem:
                    text: 'CARS'
                    on_press:
                        root.nav_drawer.set_state("close")
                        app.root.current="car_brand"
                    # markup: True
                    # IconRightWidget:
                    #     id: down
                    #     icon: 'chevron-right' 
                    #     on_press: root.cars_list(down)
                    IconLeftWidget:
                        icon:"car"
                GridLayout:
                    id: box
                    cols: 1
                    height: self.minimum_height
                    MDLabel:
                        id: label
                        text:""
        MDFloatingActionButton:
            text:"logout"
            icon: "logout"
            icon_color:"black"
            md_bg_color:0,0,0,0
            pos_hint: {'center_x': 0.85, 'center_y': 0.8}
            elevation: 0
            on_press: app.logout()
        MDLabel:
            text: 'Logout'
            font_size: '12dp'
            pos_hint: {'center_x': 0.88, 'center_y': 0.85}
            theme_text_color:"Custom"
            text_color:"#5a5a5a"
            size_hint: .2,0.01
<CustomCard@MDCard>:
    orientation: 'vertical'
    padding: '8dp'
    height: '210dp'
    border_radius: 20
    radius: [15]
    size_hint: .9,None
    md_bg_color:"#caf0f8"
    