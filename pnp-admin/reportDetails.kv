<ReportDetails>:
    name: "reportDetails"
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: title
            title: 'Report Details'
            elevation: 0
            pos_hint: {"top": 1}
            use_overflow: True
            left_action_items:[["arrow-left", lambda x : root.back(self.icon)]]
            right_action_items:[["check-underline",lambda x : root.approve()]]
            md_bg_color: "#323B4E"
        MDTabs:
            id:tabs
            on_tab_switch:root.on_tab_switch(*args)
            InformationTab:
                title: "Information"
                icon: "information"
                name: "information"
                BoxLayout:
                    orientation: 'vertical'
                    ScrollView:
                        size_hint: (1,1)
                        MDGridLayout:
                            cols: 1
                            spacing: "8dp"
                            padding: "10dp", "10dp", "10dp", "10dp"
                            size_hint_y: None
                            height: self.minimum_height + dp(30)

                            
                            TwoLineIconListItem:
                                id: date_label
                                text:"Date of the Report"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "calendar"

                            TwoLineIconListItem:
                                id: time_label
                                text:"Time of the Report"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "clock"
                            TwoLineIconListItem:
                                id: sender_label
                                text:"Report Sender"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "account-arrow-right"
                            
                            TwoLineIconListItem:
                                id: location_label
                                text:"Location"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "sign-direction"
                            MDLabel:
                                text: 'The Other Vehicle'
                                font_style:"H6"
                            TwoLineIconListItem:
                                id: name_label
                                text:"Driver Name"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "account"
                    
                            TwoLineIconListItem:
                                id: daddress_label
                                text:"Driver Address"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "home-account"
                            TwoLineIconListItem:
                                id: age_label
                                text:"Driver Age"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "account-clock"
                            
                            TwoLineIconListItem:
                                id: gender_label
                                text:"Driver Gender"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "gender-male-female"
                            TwoLineIconListItem:
                                id: licence_label
                                text:"Driver License No."
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "license"
                            TwoLineIconListItem:
                                id: vehicle_label
                                text:"Vehicle"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "car-info"
                            TwoLineIconListItem:
                                id: plate_label
                                text:"Plate number"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "pound-box-outline"
                            #WITNESS
                            MDLabel:
                                text: 'The Witness'
                                font_style:"H6"
                            TwoLineIconListItem:
                                id: wname_label
                                text:"Witness Name"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "account"
                    
                            TwoLineIconListItem:
                                id: waddress_label
                                text:"Witness Address"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "home-account"
                            TwoLineIconListItem:
                                id: wage_label
                                text:"Witness Age"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "account-clock"
                            
                            TwoLineIconListItem:
                                id: wgender_label
                                text:"Witness Gender"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "gender-male-female"
                            TwoLineIconListItem:
                                id: status_label
                                text:"Report Status"
                                secondary_text: ""
                                IconLeftWidget:
                                    icon: "alert-circle-outline"
                            

            
            ImageTab:
                title: "Images"
                icon: "image"

                name: "gallery"
                BoxLayout:
                    orientation: 'vertical'
                    ScrollView:
                        size_hint: (1,1)
                        MDGridLayout:
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            id: ImgContainer
                            spacing: dp(10)
                            padding: dp(20)



        

