<Home>:
    name:"home"
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            elevation: 0
            right_action_items:[["power-standby",lambda x : app.logout(self.icon)]]
            md_bg_color:"#323B4E"
        MDBottomNavigation:
            panel_color: "#323B4E"
            selected_color_background: "orange"
            text_color_active: "lightgrey"
            
            MDBottomNavigationItem:
                name: 'home'
                text: 'Home'
                icon: 'home'
                BoxLayout:
                    orientation: 'vertical'
                    md_bg_color:"#caf0f8"
                    ScrollView:
                        size_hint: (1,1)
                        MDGridLayout:
                            cols: 2
                            spacing: "8dp"
                            padding: "10dp", "10dp", "10dp", "50dp"
                            size_hint_y: None
                            height: self.minimum_height + dp(10)
                            MDCard:
                                orientation: 'vertical'
                                orientation: 'vertical'
                                padding: '8dp'
                                height: '100dp'
                                border_radius: 20
                                radius: [15]
                                size_hint: .9,None
                                md_bg_color:"#caf0f8"
                                ripple_behavior: True
                                on_press: 
                                    root.manager.current='myCar'
                                    root.manager.transition.direction='left'
                                AnchorLayout:
                                    anchor_y: 'top'
                                    anchor_x: 'center'
                                    # padding: ('0dp', '20dp', '0dp', '0dp')
                                    MDIcon:
                                        font_size: '50dp'
                                        icon: "car"
                                        # badge_icon: "numeric-"+root.count_reports()
                                        # badge_bg_color: "#323B4E"
                                    MDLabel:
                                        font_size: '18dp'
                                        text: "MY CAR"
                                        font_style:"Caption"
                                        valign:"bottom"
                                        halign: "center"
                                        padding: ('0dp', '30dp', '0dp', '0dp')
                            MDCard:
                                orientation: 'vertical'
                                orientation: 'vertical'
                                padding: '8dp'
                                height: '100dp'
                                border_radius: 20
                                radius: [15]
                                size_hint: .9,None
                                md_bg_color:"#caf0f8"
                                ripple_behavior: True
                                on_press: root.manager.current='myInsurance'
                                AnchorLayout:
                                    anchor_y: 'top'
                                    anchor_x: 'center'
                                    # padding: ('0dp', '20dp', '0dp', '0dp')
                                    MDIcon:
                                        font_size: '50dp'
                                        icon: "car"
                                        # badge_icon: "numeric-"+root.count_reports()
                                        # badge_bg_color: "#323B4E"
                                    MDLabel:
                                        font_size: '18dp'
                                        text: "MY CAR INSURANCE"
                                        font_style:"Caption"
                                        valign:"bottom"
                                        halign: "center"
                                        padding: ('0dp', '30dp', '0dp', '0dp')
                            MDLabel:
                                text: 'MY REPORTS'
                                font_style:'Button'
                            MDLabel:
                                text: 'MY CLAIMS'
                                font_style:'Button'
                            MDRectangleFlatIconButton:
                                md_bg_color:"#6FA8DC"
                                size_hint_x:.9
                                elevation:0
                                line_color: 0, 0, 0, 0
                                on_press: root.manager.current='myReports'
                                MDIcon:
                                    icon:'file'
                                    badge_icon: "numeric-10"
                                    icon_color:"white"
                            MDRectangleFlatIconButton:
                                md_bg_color:"#6FA8DC"
                                size_hint_x:.9
                                elevation:0
                                line_color: 0, 0, 0, 0
                                MDIcon:
                                    icon:'file'
                                    badge_icon: "numeric-10"
                                    icon_color:"white"

            # MDBottomNavigationItem:
            #     name: 'reports'
            #     text: 'Reports'
            #     icon: 'file-document'
                
            #     GridLayout:
            #         cols:1
            #         MDList:
            #             id: historyList

            MDBottomNavigationItem:
                name: 'scan'
                text: 'Diagnose'
                icon: 'car-emergency'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '12dp'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'bottom'
                        Camera:
                            id:camera
                            play:True
                            resolution:(640, 480)
                            index:0

                        MDIconButton:
                            icon:'camera'
                            on_press: root.Camera()

            MDBottomNavigationItem:
                name: 'update_profile'
                text: 'Profile'
                icon: 'account'
                ScrollView:
                    size_hint: (1, 1)
                    GridLayout:
                        cols: 1
                        spacing: 0
                        padding: 30
                        size_hint_y: None
                        height: self.minimum_height
                        id: ProfileUpdate
                        
                        AnchorLayout:
                            anchor_x: "center"
                            size_hint_y: None
                            pos_hint_y:.5
                            padding: ('0dp', '30dp', '0dp', '20dp')
                            FitImage:
                                size_hint: None, None
                                width:"130dp"
                                height: "130dp"
                                source: 'assets/profile.jpg'  
                                radius:100
                        MDTextField:
                            id: email
                            hint_text: "Email"
                            pos_hint:{"center_x": .5}
                            disabled: True
                        MDTextField:
                            id: name
                            hint_text: "Name"
                            pos_hint:{"center_x": .5}
 
                        MDTextField:
                            id: address
                            hint_text: "Address"
                            pos_hint:{"center_x": .5}
                        
                        MDTextField:
                            id: contact
                            hint_text: "Contact No."
                            pos_hint:{"center_x": .5}


                        MDTextField:
                            id: dob
                            hint_text: "Date of Birth"
                            pos_hint:{"center_x": .5}
                            on_focus: if self.focus: root.showCalendar()
                        MDTextField:
                            id: age
                            hint_text: "Age"
                            pos_hint:{"center_x": .5}

                        MDTextField:
                            id: gender
                            hint_text: "Gender"
                            pos_hint:{"center_x": .5}
                        
                        MDRaisedButton:
                            text: "Update"
                            pos_hint:{"center_x": .5}
                            mode: "rectangle"
                            md_bg_color: "#607398"
                            size_hint_x: 0.9
                            size_hint_y: 0.1
                            elevation: 0
                            on_press: root.updateUserInfo()