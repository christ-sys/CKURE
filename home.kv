<home>:
    name:"home"
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title:"Damage Evaluation"
            elevation: 0
            right_action_items:[["power-standby",lambda x : app.logout(self.icon)]]
            md_bg_color:"#323B4E"
        MDBottomNavigation:
            panel_color: "#323B4E"
            selected_color_background: "orange"
            text_color_active: "lightgrey"
            
            MDBottomNavigationItem:
                name: 'home'
                text: 'Home'
                icon: 'home'
                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    spacing: "15dp"
                    padding: "12dp"
                    pos_hint: {"center_y": .5}
                    md_bg_color:"#607398"
                    MDLabel:
                        text: "Car Body Parts"
                        font_name: 'fonts/Oswald-Regular.ttf'
                    MDSmartTile:
                        radius: 24
                        box_radius: [0, 0, 24, 24]
                        box_color: 1, 1, 1, .2
                        source: "assets/swiper1.png"
                        pos_hint: {"center_x": .5, "center_y": .7}
                        size_hint: None, None
                        size: "320dp", "320dp"
            MDBottomNavigationItem:
                name: 'reports'
                text: 'Reports'
                icon: 'file-document'
                badge_icon: "numeric-5"

                MDLabel:
                    text: 'ALL CLAIM RECORDS'
                    halign: 'center'
            MDBottomNavigationItem:
                name: 'scan'
                text: 'Scan'
                icon: 'line-scan'
                BoxLayout:
                    orientation: 'vertical'
                    padding: '12dp'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'bottom'
                        Camera:
                            id:camera
                            play:True
                            resolution:(640, 480)
                            index:0

                        MDIconButton:
                            icon:'camera'
                            on_press: root.Camera()
            MDBottomNavigationItem:
                name: 'claims'
                text: 'Claims'
                icon: 'car-emergency'

                MDLabel:
                    text: 'INSURANCE'
                    halign: 'center'
            MDBottomNavigationItem:
                name: 'update_profile'
                text: 'Profile'
                icon: 'account'
                ScrollView:
                    size_hint: (1, 1)
                    GridLayout:
                        cols: 1
                        spacing: 0
                        padding: 30
                        size_hint_y: None
                        height: self.minimum_height
                        id: ProfileUpdate
                        
                        AnchorLayout:
                            anchor_x: "center"
                            size_hint_y: None
                            pos_hint_y:.5
                            padding: ('0dp', '30dp', '0dp', '20dp')
                            FitImage:
                                size_hint: None, None
                                width:"130dp"
                                height: "130dp"
                                source: 'assets/profile.jpeg'  
                                radius:100
                        MDTextField:
                            id: name
                            hint_text: "Name"
                            pos_hint:{"center_x": .5}
                            
                        MDTextField:
                            id: email
                            hint_text: "Email"
                            pos_hint:{"center_x": .5}
 
                        MDTextField:
                            id: address
                            hint_text: "Address"
                            pos_hint:{"center_x": .5}
                        
                        MDTextField:
                            id: contact
                            hint_text: "Contact No."
                            pos_hint:{"center_x": .5}


                        MDTextField:
                            id: dob
                            hint_text: "Date of Birth"
                            pos_hint:{"center_x": .5}
                            on_focus: if self.focus: root.showCalendar()
                        MDTextField:
                            id: age
                            hint_text: "Age"
                            pos_hint:{"center_x": .5}

                        MDTextField:
                            id: gender
                            hint_text: "Gender"
                            pos_hint:{"center_x": .5}
        
                        # MDTextField:
                        #     id: password
                        #     hint_text: "Password"
                        #     password: True
                        #     pos_hint:{"center_x": .5}
                        
                        MDRaisedButton:
                            text: "Update"
                            pos_hint:{"center_x": .5}
                            mode: "rectangle"
                            md_bg_color: "#607398"
                            size_hint_x: 0.9
                            size_hint_y: 0.1
                            elevation: 0
                            on_release: root.updateUserInfo()