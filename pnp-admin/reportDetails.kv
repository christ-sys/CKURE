<ReportDetails>:
    name: "reportDetails"
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: title
            elevation: 0
            pos_hint: {"top": 1}
            md_bg_color:"#323B4E"
            use_overflow: True
            left_action_items:[["arrow-left", lambda x : root.back(self.icon)]]
            right_action_items:[["check-underline",lambda x : root.approve()]]
        BoxLayout:
            orientation: 'vertical'
            ScrollView:
                size_hint: (1,1)
                MDGridLayout:
                    cols: 1
                    spacing: "8dp"
                    padding: "10dp", "10dp", "10dp", "50dp"
                    size_hint_y: None
                    height: self.minimum_height + dp(10)

                    TwoLineIconListItem:
                        id: name_label
                        text:"Name"
                        secondary_text: ""
                        IconLeftWidget:
                            icon: "account"
                    TwoLineIconListItem:
                        id: time_label
                        text:"Time of the Report"
                        secondary_text: ""
                        IconLeftWidget:
                            icon: "clock"